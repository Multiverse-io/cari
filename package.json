{
  "name": "ai-rules-installer",
  "version": "1.0.0",
  "description": "A CLI tool for installing AI rules",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cari": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "prepare": "yarn build",
    "prepublishOnly": "yarn build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "cli",
    "typescript",
    "cursor",
    "ai",
    "rules",
    "installer"
  ],
  "author": "Tim Gent",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Multiverse-io/cari.git"
  },
  "bugs": {
    "url": "https://github.com/Multiverse-io/cari/issues"
  },
  "homepage": "https://github.com/Multiverse-io/cari#readme",
  "packageManager": "yarn@4.1.1",
  "dependencies": {
    "@inquirer/prompts": "^7.4.0",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.1",
    "lodash": "^4.17.21",
    "simple-git": "^3.27.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.7",
    "@types/lodash": "^4.17.16",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^22.13.10",
    "@types/yaml": "^1.9.7",
    "@vitest/coverage-v8": "^3.0.8",
    "mock-fs": "^5.5.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
